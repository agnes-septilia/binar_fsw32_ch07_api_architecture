<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RPS Game</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <link rel="stylesheet" href="stylesheets/gameStylesheets.css">

</head>
<body style="background-color: #9C835F;">
    <div id="wrapper" class="d-flex flex-column justify-content-start">

        <!-- HEADER -->
        <div id="header" class="d-flex justify-content-start align-items-center" width="15%">
            <div id="logo" class="m-3">
                <img src="images/assets/rps_logo.png" class="img-fluid" width="60" alt="swipe-down">
            </div>
            <div id="title">
                <h2 style="color: #F9B23D;">ROCK PAPER SCISSORS</h2>
            </div>
        </div>


        <!-- SUBHEADER -->
        <div id="subheader" class="text-center m-2" width="10%">
            <h3>ROUND <%= playerInfo.round %></h3>
            <h5>Choose your opponent !</h5>
        </div>


        <!-- SECTION -->
        <div id="section">
            <div id="user-info" class="d-flex flex-column align-items-center justify-content-start">
                <h3>PLAYER 1</h3>
                <% if (playerInfo.player === 1) { %>
                    <div class="m-3"><img src="<%= playerInfo.avatar %>" class="img-fluid" width="100" alt="swipe-down"></div>
                    <h5><%= playerInfo.username %></h5>                    
                <% } else { %>
                    <div class="m-3"><img src="<%= playerInfo.opponentAvatar %>" class="img-fluid" width="100" alt="swipe-down"></div>
                    <h5><%= playerInfo.opponentUsername %></h5>
                <% } %>
            </div>


            <% if (playerInfo.player === 1) { %>
                <%- include('weapons/playerWeaponUnselected') %>
            <% } else { %>
                <%- include('weapons/opponentWeaponUnselected') %>
            <% } %>

            <div id="result-area" class="d-flex flex-column align-items-center justify-content-center">
                <div id="versus" >
                    <h1 class="display-1" style="color:#BD0000; font-weight: bold;">VS</h1>
                </div>
            </div>


            <% if (playerInfo.player === 1) { %>
                <%- include('weapons/opponentWeaponUnselected') %>
            <% } else { %>
                <%- include('weapons/playerWeaponUnselected') %>
            <% } %>


            <div id="user-info" class="d-flex flex-column align-items-center justify-content-start">
                <h3>PLAYER 2</h3>
                <% if (playerInfo.player === 2) { %>
                    <div class="m-3"><img src="<%= playerInfo.avatar %>" class="img-fluid" width="100" alt="swipe-down"></a></div>
                    <h5><%= playerInfo.username %></h5>                    
                <% } else { %>
                    <div class="m-3"><img src="<%= playerInfo.opponentAvatar %>" class="img-fluid" width="100" alt="swipe-down"></a></div>
                    <h5><%= playerInfo.opponentUsername %></h5>
                <% } %>
            </div>            


        </div>

        <!-- FOOTER -->
        <footer id="footer" width="10%" class="text-center">
            <img id="loading-image" src="images/assets/refresh.png" class="img-fluid rotate" width="50" alt="swipe-down">
        </footer>

    </div>

</body>
<!-- bootstrap js -->
<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>

<script type="module" src="javascripts/rpsChangeBackground.js"></script>
</html>