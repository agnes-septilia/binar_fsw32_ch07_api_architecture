<!-- Modal For Add Data-->
<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="addModalLabel">Add Data</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          
            <form action="/admin" method="post" enctype="application/x-www-form-urlencoded">
                <div>
                    <label for="input-username">Username :</label>
                    <input class="input-field" type="text" name="username" id="input-username" required>   
                </div>
                <br>
                <div>
                    <label for="input-email">Email :</label>
                    <input class="input-field" type="email" name="email" id="input-email" required>   
                </div>
                <br>
                <div>
                    <label for="input-password">Password :</label>
                    <br>
                    <input class= "input-field input-password" type="password" name="password" id="input-password" required>   
                    <br>
                    <input id="show-password" type="checkbox" onclick="showPassword('input-password')"><span class="checkmark">Show Password</span>
                </div>
                <br>
                <div>
                    <label for="input-gender">Gender :</label>
                    <select name="gender" id="input-gender">
                        <option value=""></option>
                        <option value="Female">Female</option>
                        <option value="Male">Male</option>
                    </select>
                </div>
                <br>
                <div>
                    <label for="input-country">Country :</label>
                    <input class="input-field" type="text" name="country" id="input-country" >   
                </div>
                <br>
                <div>
                    <label for="input-occupation">Occupation :</label>
                    <input class="input-field" type="text" name="occupation" id="input-occupation">   
                </div>
                <br>
                <div>
                    <label for="input-dob">Date of Birth :</label>
                    <input class="input-field" type="date" name="dateOfBirth" id="input-dob" >   
                </div>
                
                <br>
                <div class="modal-footer"id="button-area">
                    <div class="p-1"><button class = "btn-warning" type = "submit" name="addButton"><i class="far fa-save"> SAVE</i></button></div>
                </div>
            </form>


        </div>

      </div>
    </div>
  </div>