<!-- Modal for logout data -->
<div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="logoutModalLabel" style="color: black">LOG OUT</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        <form action="/logout" method='post'>
        </div>
          <div class="modal-body" style="color: black">
            Are you sure to log out?
          </div>
        <div class="modal-footer">
          <div><button class="btn btn-warning" type="submit" >YES</button></div>
          <div class="p-1"><button class="btn btn-danger" type="button" data-dismiss="modal"> NO</button></div>
        </div>
      </form>
      </div>
    </div>
</div>