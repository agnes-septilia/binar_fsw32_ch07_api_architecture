<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HOME</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <link rel="stylesheet" href="stylesheets/mainStylesheets.css">

</head>
<body>
    <div class="screen d-flex flex-column justify-content-between" id="main-page" style="background-image: url(images/assets/main-bg.jpg);">

        <!-- HEADER NAV -->
        <%- include('attributes/navBarHeader') %>

        <!-- CONTENT -->
        <article id="main-content" class="d-flex flex-column align-items-center justify-content-center">
            <h1 class="text-center">PLAY TRADITIONAL GAME</h1>
            <h2 class="text-center">Experience new traditional game play</h2>
            <a href="/gameEntrance"><button type="button" class="btn btn-warning
                <% if (token) { %> glowing-button <% } %>">PLAY NOW</button></a>
        </article>

        <!-- FOOTER -->
        <footer id="static-footer" class="d-flex flex-column align-items-center">
            <h5>THE STORY</h5>
            <a class="move-icon" onclick="window.location.href='#games-subpage'">
                <img src="images/assets/scroll-down.svg" class="img-fluid" width="50" alt="swipe-down">
            </a>
        </footer>
    </div>
</body>

<!-- bootstrap js -->
<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>

</html>
