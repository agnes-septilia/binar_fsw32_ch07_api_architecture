<!-- Carousel for The Games Options Page -->

<div id="carousel-area" class="d-flex align-self-center">
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>

    <div id="carouselExampleIndicators" class="carousel slide d-flex justify-content-center" data-ride="carousel">

        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="images/assets/rockpaperstrategy-1600.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="images/assets/Congklak.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="images/assets/tic-tac-toe.jpg" alt="Third slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="images/assets/karambol.png" alt="Fourth slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="images/assets/domino.png" alt="Fifth slide">
            </div>
        </div>
        
        <ol class="carousel-indicators">
            <div data-target="#carouselExampleIndicators" data-slide-to="0" class="active">
                <img src="images/assets/ellipse-outline.svg" alt="First Indicator">
            </div>
            <div data-target="#carouselExampleIndicators" data-slide-to="1" class="active">
                <img src="images/assets/ellipse-outline.svg" alt="Second Indicator">
            </div>
            <div data-target="#carouselExampleIndicators" data-slide-to="2" class="active">
                <img src="images/assets/ellipse-outline.svg" alt="Third Indicator">
            </div>
            <div data-target="#carouselExampleIndicators" data-slide-to="3" class="active">
                <img src="images/assets/ellipse-outline.svg" alt="Fourth Indicator">
            </div>
            <div data-target="#carouselExampleIndicators" data-slide-to="4" class="active">
                <img src="images/assets/ellipse-outline.svg" alt="Fifth Indicator">
            </div>
        </ol>
    </div>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
